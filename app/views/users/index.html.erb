<div class="container" data-controller="instant-search">
  <p style="color: green"><%= notice %></p>

    <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Dropdown button
  </button>
  <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="#">Action</a></li>
    <li><a class="dropdown-item" href="#">Another action</a></li>
    <li><a class="dropdown-item" href="#">Something else here</a></li>
  </ul>
</div>

  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">

      <%= form_with url: users_path, method: :get, class: "d-flex", html: { data: { instant_search_target: "form" } } do %>
        <%= text_field_tag :query,
                           params[:query],
                           class: "form-control",
                           placeholder: "Search",
                           autofocus: true,
                           data: {
                             instant_search_target: "input",
                             action: "keyup->instant-search#update",
                           } %>
      <% end %>

    </div>
  </div>

  <div class="d-flex justify-content-between align-items-baseline">
    <h1>Users</h1>
    <%= link_to "New user", new_user_path %>
  </div>

  <div id="users" data-instant-search-target="results">
    <%= render "list" %>
  </div>
</div>
